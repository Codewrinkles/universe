{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Codewrinkles.Infrastructure.Email": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "Codewrinkles",
    "Audience": "Codewrinkles",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "https://codewrinkles.com",
      "https://www.codewrinkles.com"
    ]
  },
  "BlobStorage": {
    "AccountName": "codewrinklesstorage",
    "AvatarContainer": "avatars",
    "PulseImageContainer": "pulse-images",
    "UseManagedIdentity": false
  },
  "Email": {
    "FromName": "Codewrinkles",
    "BaseUrl": "https://codewrinkles.com",
    "ReengagementHourUtc": 8,
    "ReengagementBatchSize": 100
  },
  "Nova": {
    "ModelId": "gpt-4o-mini",
    "MaxTokens": 2048,
    "Temperature": 0.7,
    "MaxContextMessages": 20
  }
}
